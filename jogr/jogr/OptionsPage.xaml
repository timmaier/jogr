<?xml version="1.0" encoding="utf-8" ?>
	
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jogr.OptionsPage">
    <ContentPage.Content>
        <Grid VerticalOptions="Fill" BackgroundColor="White">
            <Frame CornerRadius="25" HasShadow="False" BackgroundColor="#315C6A" VerticalOptions="Start" HeightRequest="40"></Frame>
            <Label BackgroundColor="#315C6A" VerticalOptions="Start" Text="ready. set." HeightRequest="60" YAlign="Center" XAlign="Center" TextColor="White" FontSize="40" FontFamily="{StaticResource NormalFont}"/>
            <Label Text="Welcome to Options/Search page!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Frame Padding="10" BackgroundColor="White" HasShadow="False" HorizontalOptions="Center" VerticalOptions="End">
                <Button Clicked="GoToMapsPage" BackgroundColor="#315C6A" VerticalOptions="Center" TextColor="White" Text="go." FontSize="60" FontFamily="{StaticResource NormalFont}" CornerRadius="25" />
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>